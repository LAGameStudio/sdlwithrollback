{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build with clang",
      "command": "clang++",
      "args": [
        "-std=c++1z",
        "-stdlib=libc++",
        "-Iinclude",
        "-I/usr/local/include",
        "-Ibuild/external/sdl2_mac_libs/SDL2.framework/Headers",
        "-Ibuild/external/jsoncpp_mac/include",
        "src/Core/Geometry2D/*.cpp",
        "src/Core/Math/*.cpp",
        "src/StateMachine/*.cpp",
        "src/*.cpp",
        "src/Components/*.cpp",
        "src/Components/CompDataHandlers/*.cpp",
        "src/Components/StateComponents/*.cpp",
        "src/Core/Prefab/*.cpp",
        "src/AssetManagement/*.cpp",
        "src/AssetManagement/StaticAssets/*.cpp",
        "src/GameState/*.cpp",
        "src/Systems/*.cpp",
        "src/DebugGUI/*.cpp",
        "src/Rendering/*.cpp",
        "imgui/impl/imgui_impl_sdl.cpp",
        "imgui/impl/imgui_impl_opengl2.cpp",
        "imgui/*.cpp",
        "-L/usr/local/lib",
        "-ljsoncpp",
        "-Fbuild/external/sdl2_mac_libs",
        "-Wl,-rpath,$(PWD)/build/external/sdl2_mac_libs",
        "-Fbuild/external/jsoncpp_mac/lib",
        "-Wl,-rpath,$(PWD)/build/external/jsoncpp_mac/lib",
        "-framework",
        "SDL2",
        "-framework",
        "SDL2_image",
        "-framework",
        "SDL2_ttf",
        "-framework",
        "OpenGl",
        "-o",
        "game.out",
        "--debug"
        //"-ftime-report"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ]
}